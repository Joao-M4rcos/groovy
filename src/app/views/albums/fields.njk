
<div class="item">
    <div>Title</div>
    <div>
        <input
            type="text" 
            name="title"
            placeholder="Type the ad Title"
            value="{{album.title}}"
        >
    </div>
</div>

<div class="item">
    <div>Photos</div>
    <div>
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file"
                name="photos"
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <p>Select till 6 photos</p>
        </div>
        <div id="photos-preview">
            {% if files %}
                {% for image in files %}
                    <div class="photo" id="{{image.id}}">
                        <img src="{{image.src}}" alt="{{image.name}}">
                        <i class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >
                        close
                        </i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>